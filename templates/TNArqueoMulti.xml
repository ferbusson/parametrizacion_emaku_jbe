<!--
   Los tags que se agregaron para soportar impresion multi centrocosto fueron:
   metadata: importValue nombre_suc
   paquete final: importValue direccion
   paquete final: importValue ciudad

   *Para la impresion del logo se adiciono la etiqueta dbimage, la cual recibe la imagen a imprimir
   En esta plantilla es el primer paquete que se recibe luego del metadata
-->

<emaku_template type="POSTSCRIPT" requestNumeration="true" copies="1" silent="false" printer="EPSON_TM-T20">

   <settings width="220" height="10000" />

   <metadata>
      <font row="0" col="0" name="Sans" size="10" />
      <field row="90" center="70" type="STRING" importValue="true">nombre_suc</field>
      <font row="0" col="0" name="Sans" size="7" />
      <field row="100" center="5" type="STRING" importValue="true">nitalterno</field>      
      <font row="0" col="0" name="Sans" size="8" />
      <field row="200" col="15" type="STRING">Arqueo de Caja</field>
      <field row="210" col="15" type="STRING">Numero:</field>

      <barcodeImage row="110" col="20" />
      <ndocument row="210" col="87" />
      <time row="240" col="50" />

      <field row="220" col="15" type="STRING">Fecha:</field>
      <field row="230" col="15" type="STRING">Cajero:</field>
      <field row="240" col="15" type="STRING">Hora:</field>
      <!-- Informacion detallada de productos -->
      <line row="250" col="2" row2="250" col2="5" />
      <line row="290" col="2" row2="290" col2="200" />
   </metadata>


    <!-- logo sucursal -->
      <package>
        <dbimage row="1" width = "150" height= "80"  col="15" type="STRING" />
      </package>

   0 <!-- Fecha Factura -->
   <package>
      <field row="220" col="53" type="DATE" mask="EEEEEE dd MMMM yyyy" />
   </package>
   1 <!-- Cajero -->
   <package>
      <field row="230" col="53" type="STRING" />
   </package>
   2 <!-- Linea -->
   <package>
      <line row="last" rowAcum="20" col="2" row2="last" col2="200" />
   </package>  
   3 <!-- Total Pesos-->
   <package>
      <field textLine="Total Pesos......" rowAcum="20" textCol="12" fontName="Dialog" fontSize="14" fontStyle="1" row="last" col="200" width="13" type="NUMERIC" mask="#,###,###.##" />
   </package>  
   4 <!-- Total T. Debito -->
   <package>
      <field textLine="Total T. Debito" rowAcum="20" textCol="12" fontName="Dialog" fontSize="14" fontStyle="1" row="last" col="200" width="13" type="NUMERIC" mask="#,###,###.##" />
   </package>
   5 <!-- Total T. Credito-->
   <package>
      <field textLine="Total T. Credito" rowAcum="20" textCol="12" fontName="Dialog" fontSize="14" fontStyle="1" row="last" col="200" width="13" type="NUMERIC" mask="#,###,###.##" />
   </package>
   6 <!-- Total F. Credito -->
   <package>
      <field textLine="Total F. CrÃ©dito ......" rowAcum="20" textCol="12" fontName="Dialog" fontSize="14" fontStyle="1" row="last" col="200" width="13" type="NUMERIC" mask="#,###,###.##" />
   </package>  

   7 <!-- Gran Total -->
   <package>
      <field textLine="Gran Total ......" rowAcum="20" textCol="12" fontName="Dialog" fontSize="14" fontStyle="1" row="last" col="200" width="13" type="NUMERIC" mask="#,###,###.##" />
   </package>  
   8 <!-- Linea -->
   <package>
      <line rowAcum="12" row="last" col="2" row2="last" col2="200" />
   </package>  
   9 <!-- Titulo Observaciones -->  
   <package>
      <field textLine="Observaciones:" rowAcum="12" textCol="13" row="last" col="200" type="STRING"/>
   </package>  
   10 <!-- Observaciones -->
   <package>
      <field rowAcum="12" row="last" col="1"  width="40"  height="4" type="TEXT"/>
   </package> 
   11 <!-- Linea -->
   <package>
      <line rowAcum="12" row="last" col="2" row2="last" col2="200" />
   </package>  
   
   12 <!-- Pie de pagina -->
   <package>
      <!--Campos de texto originalmente traidos de MT-->

      <text rowAcum="10" row="last" col="15" type="STRING" importValue="true">direccion</text>
      <text rowAcum="10" row="last" col="15" type="STRING" importValue="true">telefono</text>
      <text rowAcum="10" row="last" col="15" type="STRING">fabflyestiloamericano@gmail.com</text>
      <text rowAcum="20" row="last" col="15" type="STRING" importValue="true">ciudad</text>

      
      <text fontName="Dialog" fontSize="6" fontStyle="1" rowAcum="8" row="last" col="12" type="STRING">Comprobante Elaborado Con E-Maku</text>
      <text fontName="Dialog" fontSize="6" fontStyle="1" rowAcum="30" row="last" col="12" type="STRING">Licenciado Bajo GPL V 2.0</text>
   </package>

</emaku_template>
