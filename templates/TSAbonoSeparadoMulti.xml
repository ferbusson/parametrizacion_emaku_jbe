      <field row="167" center="218" type="STRING" importValue="true">piepaginados</field>
      <field row="177" center="218" type="STRING" importValue="true">ciudad</field>
      <field row="192" center="218" type="STRING" importValue="true">horarioatencion</field>
      <field row="203" center="218" type="STRING" importValue="true">piepaginauno</field>
      
      <font row="0" col="0" name="Sans" size="13" />
      <field row="223" center="218" type="STRING">ABONO A SEPARADO (Copia)</field>

      <font row="0" col="0" name="Sans" size="8" />
    
      <field row="250" col="15" type="STRING">Numero:</field>
      <field row="260" col="15" type="STRING">Fecha:</field>
      <field row="270" col="15" type="STRING">Hora:</field>
      <field row="280" col="15" type="STRING">Cajero:</field>

      <line row="287" col="2" row2="287" col2="218" />
     
      <field row="300" col="10" type="STRING">Identificación:</field>
      <field row="310" col="10" type="STRING">Cliente:</field>
      <field row="320" col="10" type="STRING">Dirección:</field>
      <field row="330" col="10" type="STRING">Ciudad:</field>
      <field row="340" col="10" type="STRING">Contacto:</field>
      <field row="350" col="10" type="STRING">Separado:</field>

   </metadata>

	<!-- 0 Estado factura -->
        <package>
                <field row="235" col="40" rowAcum="15" type="STRING" fontName="Dialog" fontSize="10" fontStyle="0" />
        </package>

   	<!-- 1 -->
	<package>
		<generateBarCodeImage row="80" col="20" width="10" type="NUMERIC" mask="0000000000" />
	</package>

     	<!-- 2 Numero fac -->
	<package>
       		 <field row="250" col="71" width="10" type="STRING" mask="0" />
        </package>

	<!-- 3 Hora -->
	<package>
		<field row="270" col="53" type="STRING" />
	 </package>

	<!-- 4 Prefijo -->
	<package>
	       <field row="250" col="53" type="STRING" textLine="-" textCol="65" />
	</package>   

	<!-- 5 fecha fac -->
   	<package>
      		<field row="260" col="53" type="DATE" mask="EEEEEE dd MMMM yyyy" />
   	</package>

 	<!-- 6 vendedor -->
   	<package>
      		<field row="280" col="53" fontName="Dialog" fontSize="7" fontStyle="0" type="STRING" />
   	</package>

	   <!-- 7 -->
	   <package validate="true">
	      <field row="310" rowAcum="15"  col="80" type="STRING"/>
	      <field row="300" rowAcum="15"  col="80" type="STRING"/>
	      <field row="320" rowAcum="15"  col="80" type="STRING"/>
	      <field row="340" rowAcum="15"  col="80" type="STRING"/>
	      <field row="330" rowAcum="15"  col="80" type="STRING"/>
	   </package>
  	
	<!-- 8 Separado -->
	<package>
	       <field row="350" col="80" type="STRING" />
	</package>   

	<!-- 9 linea -->
  	 <package>
     		 <line row="last" rowAcum="20" col="2" row2="last" col2="218" />
  	 </package>  
   	
	<!-- 10 --> 
   	<package>
      		<field textLine="Abono" rowAcum="15" textCol="5" validZero="true" fontName="Dialog" fontSize="11" fontStyle="0" row="last" col="204" width="13" type="NUMERIC" mask="#,###,###.##" />
   	</package>
  	
	<!-- 11 -->
