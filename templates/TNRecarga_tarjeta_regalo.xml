<!--
   Los tags que se agregaron para soportar impresion multi centrocosto fueron:
   metadata: importValue nombre_suc
   paquete final: importValue direccion
   paquete final: importValue ciudad

   *Para la impresion del logo se adiciono la etiqueta dbimage, la cual recibe la imagen a imprimir
   En esta plantilla es el primer paquete que se recibe luego del metadata
-->
<!--EPSON_TM-T20 -->
<emaku_template type="POSTSCRIPT" requestNumeration="true" copies="2" silent="true" nativeprinter="true" printer="EPSON_TM-T20">
   <settings width="220" height="10000" />
   <metadata>
      <image row="1" col="30" width="25" height="12">/icons/logo_fac.png</image>
      <font row="0" col="0" name="Sans" size="9" />
      <field row="117" center="218" type="STRING" importValue="true">terceroal</field>
      <font row="0" col="0" name="Sans" size="7" />
      <field row="127" center="218" type="STRING" importValue="true">nitalterno</field>
      <field row="137" center="218" type="STRING">Responsable del Impuesto sobre las ventas - IVA</field>
      <field row="147" center="218" type="STRING" importValue="true">direccion</field>
      <field row="157" center="218" type="STRING" importValue="true">telefono</field>
      <field row="167" center="218" type="STRING" importValue="true">piepaginados</field>
      <field row="177" center="218" type="STRING" importValue="true">ciudad</field>
      <field row="192" center="218" type="STRING" importValue="true">horarioatencion</field>
      <field row="203" center="218" type="STRING" importValue="true">piepaginauno</field>
      
      <font row="0" col="0" name="Sans" size="11" />
      <field row="223" center="218" type="STRING">RECARGA TARJETA REGALO</field>

      <font row="0" col="0" name="Sans" size="8" />
    
      <field row="250" col="15" type="STRING">Numero:</field>
      <field row="260" col="15" type="STRING">Fecha:</field>
      <field row="270" col="15" type="STRING">Hora:</field>
      <field row="280" col="15" type="STRING">Cajero:</field>

      <barcodeImage row="80" col="20" />
      <ndocument row="250" col="67" format="Integer"/>
      <date row="260" col="53" mask="EEEEEE dd MMMM yyyy"/>
      <time row="270" col="53" />

   </metadata>

	<!-- 0 Prefijo -->
	<package>
	       <field row="250" col="53" textLine="-" textCol="63" fontName="Dialog" fontSize="8" fontStyle="0" type="STRING" />
	</package>   

 	<!-- 1 vendedor -->
   	<package>
      		<field row="280" col="53" rowAcum="15" fontName="Dialog" fontSize="7" fontStyle="0" type="STRING" />
   	</package>

	<!-- 2 linea -->
  	 <package>
     		 <line row="last" rowAcum="20" col="2" row2="last" col2="218" />
  	 </package>  
   
	<!-- 3 Valor numeros --> 
   	<package>
      		<field textLine="Valor Recarga" rowAcum="20" textCol="5" validZero="true" fontName="Dialog" fontSize="12" fontStyle="0" row="last" col="205" width="13" type="NUMERIC" mask="#,###,###.##" />
   	</package>
  	
	<!-- 4 Valor en letras -->
        <package>
                <field row="last" col="5" type="NUMTOLETTERS" width="75" height="2" rowAcum="15" />
        </package>
	
	<!-- 5 linea -->
  	 <package>
     		 <line row="last" rowAcum="20" col="2" row2="last" col2="218" />
  	 </package>  
	<!-- 6 -->
   <package>
      <field textLine="Cheques" rowAcum="13" textCol="5" validZero="true" fontName="Dialog" fontSize="10" fontStyle="1" row="last" col="205" width="13" type="NUMERIC" mask="#,###,###.##" />
   </package>
  <!-- 7 -->
  <package>
      <field textLine="Efectivo" rowAcum="13" textCol="5" validZero="true" fontName="Dialog" fontSize="10" fontStyle="1" row="last" col="205" width="13" type="NUMERIC" mask="#,###,###.##" />
   </package>

   <!-- 8 -->
   <package>
      <field textLine="Tarjetas" rowAcum="13" textCol="5" validZero="true" fontName="Dialog" fontSize="10" fontStyle="1" row="last" col="205" width="13" type="NUMERIC" mask="#,###,###.##" />
   </package>

   <!-- 9 -->
   <package>
      <field textLine="Cambio" rowAcum="13" textCol="5" fontName="Dialog" fontSize="10" fontStyle="1" row="last" col="205" width="13" type="NUMERIC" mask="#,###,###.##" />
   </package>

   <!-- 10 -->
   <package>
      <line rowAcum="15" row="last" col="2" row2="last" col2="218" />
   </package>

   <!-- 11 Nro.tarjeta -->
        <package>
                <field textLine="Nro. Tarjeta: " textCol="15" row="last" col="100" rowAcum="15" fontName="Dialog" fontSize="10" fontStyle="0" type="STRING" />
        </package>
<!-- 12 tarjetas -->
        <package>
                <field textLine="Nro. Vaucher: " textCol="15" row="last" col="100" rowAcum="15" fontName="Dialog" fontSize="10" fontStyle="0" type="STRING" />
        </package>
<!-- 13 tarjetas -->
        <package>
                <field textLine="RRN:          " textCol="15" row="last" col="100" rowAcum="15" fontName="Dialog" fontSize="10" fontStyle="0" type="STRING" />
        </package>
<!-- 14 tarjetas -->
        <package>
                <field textLine="Nro. Autoriza:" textCol="15" row="last" col="100" rowAcum="15" fontName="Dialog" fontSize="10" fontStyle="0" type="STRING" />
        </package>
<!-- 15 -->
   <package>
      <line rowAcum="12" row="last" col="2" row2="last" col2="218" />
   </package>

</emaku_template>
