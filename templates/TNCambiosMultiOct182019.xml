<!--
   Los tags que se agregaron para soportar impresion multi centrocosto fueron:
   metadata: importValue nombre_suc
   paquete final: importValue direccion
   paquete final: importValue ciudad

   *Para la impresion del logo se adiciono la etiqueta dbimage, la cual recibe la imagen a imprimir
   En esta plantilla es el primer paquete que se recibe luego del metadata
-->

<emaku_template type="POSTSCRIPT" requestNumeration="true" copies="2" silent="false" printer="EPSON_TM-T20">
   <settings width="220" height="10000" />

   <metadata>
      <font row="0" col="0" name="Sans" size="10" />
      <field row="150" center="100" type="STRING" importValue="true">nombre_suc</field>
      <font row="0" col="0" name="Sans" size="7" />
      <field row="160" center="130" type="STRING" importValue="true">nitalterno</field>
      
      <font row="0" col="0" name="Sans" size="10" />
      <field row="190" col="15" type="STRING">FACTURA DE VENTA - CAMBIO</field>
      <font row="0" col="0" name="Sans" size="8" />
      <field row="210" col="15" type="STRING">Numero:</field>

      <field row="220" col="15" type="STRING">Fecha:</field>
      <field row="230" col="15" type="STRING">Cajero:</field>
      <field row="240" col="15" type="STRING">Hora:</field>

      <!--<barcodeImage row="110" col="20" width="10" />-->
      <ndocument row="210" col="87" />
      <time row="240" col="50" />

      <!-- Informacion detallada de productos -->
      <line row="250" col="2" row2="250" col2="5" />
      <field row="260" col="13"  type="STRING">D E V O L U C I O N</field>
      <field row="270" col="13"  type="STRING">Código</field>
      <field row="280" col="60" type="STRING">Descripcion</field>
      <field row="290" col="10" type="STRING">Cant</field>
      <field row="290" col="60" type="STRING">V. Unit</field>
      <field row="290" col="130" type="STRING">Total</field>
      <field row="290" col="170" type="STRING">T. USD</field>
      <line row="300" col="2" row2="300" col2="200" />
   </metadata>


   1 <!-- logo sucursal -->
       <package>
      <dbimage row="50" width = "150" height= "80"  col="15" type="STRING" />
       </package>
  

