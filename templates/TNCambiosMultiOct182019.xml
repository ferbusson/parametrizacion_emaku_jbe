   <package>
      <field row="210" col="53" type="STRING" />
   </package>
   3 <!-- Fecha factura -->
   <package>
      <field row="220" col="50" type="DATE" mask="EEEEEE dd MMMM yyyy" />
   </package>
   4 <!-- Cajero -->
   <package>
      <field row="230" col="50" type="STRING" />
   </package>
   5 <!-- Tabla principal productos entrada-->
   <package>
      <subpackage rowInit="310" rowAcum="12">
         <field col="15" type="STRING" incrementRow="true" />
         <field col="5" incrementRow="true" type="STRING" />
         <field col="15" width="3" type="NUMERIC" mask="###" />
         <field col="80" width="13" type="NUMERIC" mask="#,###,###.##" />
         <field col="140" width="13" type="NUMERIC" mask="#,###,###.##" />
         <field col="187" width="13" type="NUMERIC" mask="###.##" />
      </subpackage>
   </package>
   6 <!-- Linea -->
